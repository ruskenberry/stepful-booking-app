{% extends 'base.html.twig' %}

{% block title %}Student Details{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Student Details</h1>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                {{ student.firstName }} {{ student.lastName }}
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Personal Information</p>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">ID</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ student.id }}</dd>
                </div>
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">First Name</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ student.firstName }}</dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Last Name</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ student.lastName }}</dd>
                </div>
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Phone Number</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ student.phoneNumber }}</dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Booked Sessions</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Upcoming coaching sessions</p>
        </div>
        <div class="border-t border-gray-200">
        {% if sessions|length > 0 %}
    <ul class="divide-y divide-gray-200">
        {% for session in sessions %}
            <li class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                    <div>
                        <a href="{{ path('app_student_session_show', {'studentId': student.id, 'sessionId': session.id}) }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-900 truncate">
                            {{ session.startDateTime|date('F j, Y') }}
                        </a>
                        <p class="text-sm text-gray-500">
                            {{ session.startDateTime|date('g:i a') }} - {{ session.startDateTime|date_modify("+2 hours")|date('g:i a') }}
                        </p>
                    </div>
                        <div class="ml-2 flex-shrink-0">
                            <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Coach: {{ session.coach.firstName }} {{ session.coach.lastName }}
                            </p>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="px-4 py-5 sm:px-6 text-sm text-gray-500">No sessions booked.</p>
    {% endif %}
        </div>
    </div>

    <div class="flex space-x-4">
        <a href="{{ path('app_student_index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Back to list
        </a>
        <a href="{{ path('app_student_edit', {'id': student.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Edit
        </a>
        <a href="{{ path('app_student_booking', {'id': student.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
            Book New Session
        </a>
        {{ include('student/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}