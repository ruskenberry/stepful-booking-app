<div id="modal" tabindex="-1" aria-hidden="true" class="fixed inset-0 z-50 overflow-y-auto overflow-x-hidden flex items-center justify-center">
    <div class="relative p-4 w-full max-w-md">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 border-b rounded-t dark:border-gray-600">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ title|default('Add New Coach') }}
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="modal" _="on click remove #modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            
            <!-- Modal body -->
            <div class="p-6">
               {% set modal_form_attr = {
                    'hx-post': path(submit_path, submit_params|default({})),
                    'hx-target': '#coachsTable',
                    'hx-swap': 'beforeend',
                    '_': 'on htmx:afterRequest remove #modal'
                } %} 
                {% include 'coach/_form.html.twig' with { form_attr: modal_form_attr } %}
            </div>
        </div>
    </div>
</div>