{% extends 'base.html.twig' %}

{% block title %}Coach Details{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Coach Details</h1>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                {{ coach.firstName }} {{ coach.lastName }}
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Personal Information</p>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">ID</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ coach.id }}</dd>
                </div>
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">First Name</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ coach.firstName }}</dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Last Name</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ coach.lastName }}</dd>
                </div>
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Phone Number</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ coach.phoneNumber }}</dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Open Sessions</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Upcoming coaching sessions</p>
        </div>
        <div class="border-t border-gray-200">
           {% set openSessions = sessions|filter(session => session.status) %}
           {% if openSessions|length > 0 %}
                <ul class="divide-y divide-gray-200">
                    {% for session in openSessions %}
                        <li class="px-4 py-4 sm:px-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <a href="{{ path('app_coach_session_show', {'coachId': coach.id, 'id': session.id}) }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-900 truncate">
                                        {{ session.startDateTime|date('F j, Y') }}
                                    </a>
                                    <p class="text-sm text-gray-500">
                                        {{ session.startDateTime|date('g:i a') }} - {{ session.startDateTime|date_modify("+2 hours")|date('g:i a') }}
                                    </p>
                                </div>
                                <div class="ml-2 flex-shrink-0">
                                    {% if session.student %}
                                        <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            Student: {{ session.student.firstName }} {{ session.student.lastName }}
                                        </p>
                                    {% else %}
                                        <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            Not booked
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="px-4 py-5 sm:px-6 text-sm text-gray-500">No open sessions scheduled.</p>
            {% endif %}
        </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Closed Sessions</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Completed coaching sessions</p>
        </div>
        <div class="border-t border-gray-200">
           {% set closedSessions = sessions|filter(session => not session.status) %}
           {% if closedSessions|length > 0 %}
                <ul class="divide-y divide-gray-200">
                    {% for session in closedSessions %}
                        <li class="px-4 py-4 sm:px-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <a href="{{ path('app_coach_session_show', {'coachId': coach.id, 'id': session.id}) }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-900 truncate">
                                        {{ session.startDateTime|date('F j, Y') }}
                                    </a>
                                    <p class="text-sm text-gray-500">
                                        {{ session.startDateTime|date('g:i a') }} - {{ session.startDateTime|date_modify("+2 hours")|date('g:i a') }}
                                    </p>
                                </div>
                                <div class="ml-2 flex-shrink-0">
                                    <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                        Closed
                                    </p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="px-4 py-5 sm:px-6 text-sm text-gray-500">No closed sessions.</p>
            {% endif %}
        </div>
    </div>

    <div class="flex space-x-4">
        <a href="{{ path('app_coach_index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Back to list
        </a>
        <a href="{{ path('app_coach_edit', {'id': coach.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Edit
        </a>
        <a href="{{ path('app_coach_session_new', {'id': coach.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
            Add New Session
        </a>
        {{ include('coach/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}